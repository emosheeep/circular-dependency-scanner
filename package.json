{
  "name": "circular-dependency-scanner",
  "version": "2.3.0",
  "type": "module",
  "description": "Out-of-box and zero configuration circular dependencies detector, with both JavaScript API and Command Line Tool.",
  "author": "情绪羊 <emosheep@qq.com>",
  "packageManager": "pnpm@9.9.0",
  "license": "MIT",
  "bin": {
    "ds": "dist/cli.mjs"
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "dist",
    "types",
    "rust",
    "CHANGELOG.md",
    "README.md",
    "README.zh_CN.md"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/emosheeep/circular-dependency-scanner"
  },
  "keywords": [
    "circular",
    "scanner",
    "detector",
    "circles",
    "cyclic",
    "ast",
    "javascript",
    "ecmascript",
    "circular-dependency",
    "cli",
    "napi-rs",
    "rust",
    "wasm"
  ],
  "scripts": {
    "prepare": "husky install",
    "prepublishOnly": "npm run test && npm run build",
    "lint": "eslint . --fix --ext .js,.ts",
