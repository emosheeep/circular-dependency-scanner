{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
